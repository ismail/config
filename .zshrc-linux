alias ihatenvidia="nvidia-settings -a '[gpu:0]/GPUPowerMizerMode=1'"
alias chroot="TERM=screen-256color sudo systemd-nspawn -D"
alias -s exe=wine
alias -s go="go run"
alias -s js=node
alias io="sudo iotop -o -P -a"
alias lsmaster="ls -1 ~/.ssh/master-* | awk -F'/' '{print \$(NF)}'"
alias lsrpm="rpm -qlp"
alias lsprovides="rpm -qp --provides"
alias lsrequires="rpm -qp --requires"
alias lstcp="ss -lnpt"
alias lsudp="ss -lnpu"
alias obs="osc build --ccache --jobs=8 --cpio-bulk-download --download-api-only"
alias open="xdg-open"
alias perf="sudo perf"
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'
alias please='sudo $(fc -ln -1)'
alias result="osc results -v"
alias sc="systemctl"
alias slog="sudo journalctl --system -b -0 --all"
alias tlog="sudo journalctl --system --all --follow"
alias ulog="journalctl --user -b -0 --all"
alias vssh="vagrant up && vagrant ssh"

export EXTRA_CLANG_FLAGS="-stdlib=libc++ -fuse-ld=gold -Wl,-rpath,/opt/clang/lib64,--enable-new-dtags"
export JAVA_HOME=/havana/binaries/oracle-jdk
export PATH=/opt/clang/bin:/havana/binaries/bin:$HOME/.cabal/bin:$HOME/go/bin:/home/ismail/.perl5/bin:$HOME/.local/bin:/sbin:/usr/sbin:$PATH
export PYTHONPATH=$HOME/.local/lib/python3.4/site-packages/:$PYTHONPATH
export MALLOC_PERTURB_=44
export NODE_PATH=/usr/lib/node_modules/
export VDPAU_DRIVER=r600
export WINEDEBUG=-all
export WINEDLLOVERRIDES="*msvcr120=n"

[ -f ~/.Xdefaults -a ! -z $DISPLAY ] && xrdb ~/.Xdefaults
