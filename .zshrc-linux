alias obs="osc build --ccache --cpio-bulk-download --download-api-only"
alias please='sudo $(fc -ln -1)'

export JAVA_HOME=/havana/binaries/oracle-jdk
export LIBVA_DRIVER_NAME=nvidia
export MALLOC_CHECK_=2
export MALLOC_PERTURB_=63
export PATH=/opt/clang/bin:/havana/binaries/bin:$HOME/.cabal/bin:$HOME/go/bin:/sbin:/usr/sbin:$PATH
export WINEDEBUG=fixme-all

# Setup perl paths
[[ -d ~/perl5 ]] && eval $(perl -I ~/perl5/lib/perl5/ -Mlocal::lib)

# Vendor completions
typeset -U fpath
fpath=(/usr/share/zsh/site-functions $fpath)

[ -f ~/.Xdefaults -a ! -z $DISPLAY ] && xrdb ~/.Xdefaults
