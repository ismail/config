alias clear-clipboard="xclip -selection clipboard /dev/null; xclip -i /dev/null"
alias ffmpeg="ffmpeg -hide_banner"
alias obs="osc build --ccache --cpio-bulk-download --download-api-only"
alias iosc="osc -Aibs"
alias ip="ip -color=auto"
alias open="xdg-open"
alias p3="python3"
alias please='sudo $(fc -ln -1)'

export LC_ALL=C.UTF-8
export MALLOC_CHECK_=2
export MALLOC_PERTURB_=171
export TZ=:/etc/localtime
export WINEDEBUG=fixme-all

# https://stackoverflow.com/a/5578718/35060
export ALTERNATE_EDITOR=""
