bzit()
{
    if [ ! -z $1 ]; then
        pushd $1 &&
        find . -name ".svn" | xargs rm -rf &&
        rm -rf .git &&
        popd &&
        tar cjf $1.tar.bz2 $1 &&
        rm -rf $1
    fi
}

unrpm()
{
    if [ -e $1 ]; then
        rpm2cpio $1 | cpio -imdv
    fi
}

ydl()
{
    youtube-dl --prefer-free-formats "$1" -o %(stitle)s.%(ext)s
}
