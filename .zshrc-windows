# This is very slow on Cygwin
setopt NOCORRECT

# Ignore some file types
zstyle ':completion:*:-command-:*' ignored-patterns '(#i)*.exe' '(#i)*.dll' '(#i)*.acm' '(#i)*.drv' '(#i)*.ime' '(#i)*.tlb' '(#i)*.mof'

export DISPLAY=localhost:0.0
export EXTRA_CLANG_FLAGS="-fno-exceptions -Xclang -fno-sized-deallocation"
export GOPATH=C:/Users/ismail/gocode
export PATH="/cygdrive/c/SysInternals:$PATH"

alias reset="stty sane && cls"
alias sudo="cygstart --action=runas"
