export MY_CC=gcc
export MY_CXX=g++
export DISPLAY=localhost:0.0
export CLANG_EXTRAS="-D_HAS_EXCEPTIONS=0 -target i686-pc-windows-msvc"
export GOPATH=C:/Users/ismail/gocode
alias ping=/cygdrive/c/Windows/system32/PING
export PATH="/cygdrive/c/SysInternals:$PATH"

cl() {
    if [ x$1 = x ]; then
        echo "Please give a file name as parameter".
        return
    fi

    obj=`basename $1 | sed 's,\..*,.obj,'`
    exe=`basename $1 | sed 's,\..*,.exe,'`
    cl.exe /EHsc- /nologo `cygpath -w $1` > /dev/null &&
    ./$exe
    rm -f $obj $exe
}
