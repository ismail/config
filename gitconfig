[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    wdiff = diff --color-words

[branch]
    sort = -committerdate

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore
    quotepath = false
    autocrlf = false

[credential]
    helper = cache

[diff]
    algorithm = patience

[help]
    autocorrect = 5

[http]
    sslVerify = true
    cookiefile = ~/.gitcookies

[push]
    default = simple

[status]
	showUntrackedFiles = all

[protocol]
	version = 2

[pull]
	rebase = true

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
