source ~/.zshrc-common

export PATH=~/bin:/usr/local/apache-ant/bin:/usr/local/git/bin:/usr/local/android-ndk-r5:/usr/local/android-sdk/tools:/usr/local/android-sdk/platform-tools:/opt/subversion/bin:/usr/local/bin:/Developer/usr/bin:$PATH
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
export LC_ALL=en_US.UTF-8

alias gvim="open -a MacVim"
alias vi="/Applications/MacVim.app/Contents/MacOS/Vim"
alias vim=vi
alias top="top -stats command,pid,user,time,cpu,rsize"
