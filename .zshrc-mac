source ~/.zshrc-common

export PATH=~/bin:/opt/gnu/bin:/usr/local/apache-ant/bin:/usr/local/git/bin:/usr/local/android-ndk-r5b:/usr/local/android-sdk/tools:/usr/local/android-sdk/platform-tools:/opt/subversion/bin:/usr/local/bin:/Developer/usr/bin:$PATH
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
